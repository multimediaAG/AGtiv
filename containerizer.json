{
    "imageName": "AGtiv",
    "imageVersion": "1.0.2",
    "imageMaintainer": "H. RÃ¼ger",
    "imageMaintainerUsername": "hrueger",
    "branch": "master",
    "commit": "",
    "repository": "https://github.com/multimediaAG/AGtiv",
    "ngDestDir": "frontend_build",
    "ngSrcDir": "AGtiv",
    "customNgBuildCmd": "",
    "startFile": "api/build/index.js",
    "npmInstallDirs": [
        "AGtiv",
        "api"
    ],
    "debug": true,
    "fastUpdateMode": true,
    "workingDirPath": "/app/work",
    "filesToCreate": [
        {
            "path": "AGtiv/src/environments/environment.ts",
            "template": "typescript",
            "rootVariableName": "environment",
            "properties": [
                "apiUrl"
            ],
            "presetProperties": {
                "production": false
            }
        },
        {
            "path": "AGtiv/src/environments/environment.prod.ts",
            "template": "typescript",
            "rootVariableName": "environment",
            "properties": [
                "apiUrl"
            ],
            "presetProperties": {
                "production": true
            }
        },
        {
            "path": "api/src/config/config.ts",
            "template": "typescript",
            "rootVariableName": "config",
            "properties": [
                "database_host",
                "database_name",
                "database_password",
                "database_port",
                "database_user",
                "jwtSecret"
            ],
            "presetProperties": {
                "port": 80
            }
        }
    ],
    "additionalBuilds": [
        {
            "dir": "api",
            "cmd": "npm run build"
        }
    ],
    "unnecessaryFilesAndDirs": [
        ".github",
        "AGtiv",
        ".gitignore",
        "README.md",
        "api/src",
        "api/package.json",
        "api/package-lock.json",
        "api/tsconfig.json",
        "api/.gitignore"
    ]
}